                var time = new Date(item.time);
                var date = ''+time.getFullYear() +'-'+ (+time.getMonth() + 1) +'-'+ time.getDate() ;
                $('#articles').append('<li id="'+item._id+'" style="display:none">\
                        <span class="time">'+date+'</span>\
                <div>'+markdown.toHTML(item.content)+'</div></li>');
                $('#'+ item._id).show();
            })
        }});
    })
</script>